{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "predev": "yarn codegen",
    "dev": "node-dev --notify=false --clear ./src/server.ts",
    "prebuild": "yarn codegen",
    "build": "./bin/build.sh",
    "codegen": "npx graphql-codegen --config graphql.codegen.js",
    "db:migration:generate": "drizzle-kit generate:mysql --config ./drizzle.config.js",
    "db:migration:undo": "drizzle-kit drop --config ./drizzle.config.js",
    "db:migration:push": "ts-node ./src/db/migrations/migrate.ts",
    "stripe:listen":"stripe listen --forward-to localhost:9000/stripe/webhooks/api/subscription"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.6",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.1",
    "nanoid": "3.3.4",
    "stripe": "^13.9.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/graphql-modules-preset": "^3.1.3",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.0",
    "@types/stripe-v3": "^3.1.30",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.50.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "node-dev": "^8.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
